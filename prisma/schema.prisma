generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  cpf      String  @unique
  isAdmin  Boolean @default(false) @map("is_admin")

  profiles Profile[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model Game {
  id                 String @id @default(uuid())
  title              String @unique
  coverImageUrl      String @map("cover_image")
  description        String
  year               Int
  imdbScore          Float  @map("imb_score")
  trailerYouTubeUrl  String @map("trailer_youtube_url")
  gameplayYouTubeUrl String @map("gameplay_youtube_url")

  profiles Profile[]

  genders Gender[]

  // profiles GamesFromProfile[]
  // genders  GameFromGender[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  @@map("game")
}

model Gender {
  id   String @id @default(uuid())
  name String @unique

  games Game[]

  // games GameFromGender[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("gender")
}

model Profile {
  id       String @id @default(uuid())
  title    String
  imageUrl String @map("image_url")

  user     User   @relation(fields: [userId], references: [id])
  userId   String @map("user_id")

  games Game[]

  // games GamesFromProfile[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  @@map("profile")
}

